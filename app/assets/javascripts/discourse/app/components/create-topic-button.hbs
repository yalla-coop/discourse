{{#if this.canCreateTopic}}
  <DButtonTooltip>
    <:button>
      <DButton
        @action={{this.action}}
        @icon="plus"
        @disabled={{this.disabled}}
        @label={{this.label}}
        id="create-topic"
        class={{this.btnClass}}
      />
    </:button>
    <:tooltip>
      {{#if @disabled}}
        <DTooltip @icon="circle-info" @content={{i18n this.disallowedReason}} />
      {{/if}}
    </:tooltip>
  </DButtonTooltip>

  {{#if @showDrafts}}
    <TopicDraftsDropdown />
  {{/if}}
{{/if}}